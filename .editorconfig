# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset to UTF-8
[*.{js,jsx,ts,tsx,json,css,scss,md,html,yml}]
charset = utf-8

# Set tab size to 2
[*.js]
indent_style = space
indent_size = 2
[*.jsx]
indent_style = space
indent_size = 2
[*.ts]
indent_style = space
indent_size = 2
[*.tsx]
indent_style = space
indent_size = 2
[*.css]
indent_style = space
indent_size = 2
[*.scss]
indent_style = space
indent_size = 2
[*.json]
indent_style = space
indent_size = 2
[*.md]
indent_style = space
indent_size = 2
[*.html]
indent_style = space
indent_size = 2
[*.yml]
indent_style = space
indent_size = 2

# Ignore .next build directory
[next.config.js]
ignore = true
